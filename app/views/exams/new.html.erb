<% provide(:title, 'Start exam') %>

<div class="clear"></div>
<div class="row">
  <%= form_for @exam do |f| %>
    <h3> Choose subject: </h3>

    <%= select_tag :subject_id, options_for_select(@subjects, selected: params[:subject_id]), 
    class: "form-control" %>   

    <h3> Choose level </h3>
    <%= f.select :level, Settings.levels.map {|key, value| [key, value]} %>
      
    <h3><%= f.submit t :start_exam, class: "btn btn-primary" %></h3>   
  <% end %>
</div>
